<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="Joomla\Component\RadicalMart\Site\Field">
	<fieldset name="shipping">
		<fields name="shipping">
			<field name="address_string" type="value_textarea"
				   label="PLG_RADICALMART_SHIPPING_STANDARD_SHIPPING_ADDRESS"/>
			<field name="comment" type="value_textarea"
				   label="COM_RADICALMART_COMMENT"/>
			<field name="date" type="value_calendar"
				   label="PLG_RADICALMART_SHIPPING_STANDARD_SHIPPING_DATE"
				   translateformat="true"
				   showtime="false"/>
			<field name="note" type="value_textarea"
				   label="COM_RADICALMART_NOTE"/>
			<fields name="price">
				<field name="base" type="value_price"
					   label="PLG_RADICALMART_SHIPPING_STANDARD_PRICE"
					   currency="{currency_code}"/>
			</fields>
		</fields>
	</fieldset>
</form>